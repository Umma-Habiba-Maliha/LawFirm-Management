@model IEnumerable<LawFirmManagement.Models.Payment>
@{
    ViewData["Title"] = "Financial Dashboard";
}

<style>
    .money-card {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border-left: 5px solid #bdc3c7;
        height: 100%;
    }

        .money-card h5 {
            font-size: 0.85rem;
            color: #7f8c8d;
            text-transform: uppercase;
            font-weight: 700;
        }

        .money-card h3 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

    .border-revenue {
        border-color: #3498db;
    }

    .text-revenue {
        color: #3498db;
    }

    .border-admin {
        border-color: #27ae60;
    }

    .text-admin {
        color: #27ae60;
    }

    .border-lawyer {
        border-color: #f39c12;
    }

    .text-lawyer {
        color: #f39c12;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-secondary fw-bold">Financial Overview</h2>

    <!-- Financial Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="money-card border-revenue">
                <h5>Total Transactions</h5>
                <h3 class="text-revenue">৳@ViewBag.TotalRevenue</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="money-card border-admin">
                <h5>My Earnings (10%)</h5>
                <h3 class="text-admin">৳@ViewBag.TotalAdminShare</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="money-card border-lawyer">
                <h5>Payout to Lawyers (90%)</h5>
                <h3 class="text-lawyer">৳@ViewBag.TotalLawyerShare</h3>
            </div>
        </div>
    </div>

    <h4 class="mb-3 text-secondary">Transaction History</h4>

    <div class="card shadow-sm border-0">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Case / Client</th>
                    <th>Type</th>
                    <th>Method</th>
                    <th class="text-end">Amount</th>
                    <th class="text-end text-success">Admin Share</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.PaymentDate.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="fw-bold d-block">@p.Case?.CaseTitle</span>
                                <small class="text-muted">@p.Case?.Client?.Email</small>
                            </td>
                            <td>
                                @if (p.PaymentType == "Advance")
                                {
                                    <span class="badge bg-info text-dark">Advance</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">Final</span>
                                }
                            </td>
                            <td><span class="badge bg-light text-dark border">@p.PaymentMethod</span></td>
                            <td class="text-end fw-bold">৳@p.TotalAmount</td>
                            <td class="text-end fw-bold text-success">+ ৳@p.AdminShare</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center py-5 text-muted">No transactions found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>