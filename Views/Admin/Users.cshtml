@model IEnumerable<LawFirmManagement.Models.UserProfile>
@{
    ViewData["Title"] = "All Users";
}

<style>
    /* Page Header */
    .page-header {
        color: #2c3e50;
        font-weight: 700;
        border-left: 5px solid #2c3e50;
        padding-left: 15px;
    }

    /* Table Container (Card Style) */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden; /* Rounds the table corners */
        border: none;
    }

    /* Table Header */
    .custom-table thead {
        background-color: #2c3e50; /* Navy Blue */
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border: none;
        padding: 15px;
    }

    /* Table Body */
    .custom-table td {
        vertical-align: middle;
        padding: 12px 15px;
        color: #34495e;
        border-bottom: 1px solid #ecf0f1;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Role Badges */
    .role-badge {
        padding: 5px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-admin {
        background-color: #fadbd8;
        color: #c0392b;
    }

    .badge-lawyer {
        background-color: #d6eaf8;
        color: #2980b9;
    }

    .badge-client {
        background-color: #d1f2eb;
        color: #16a085;
    }

    /* Action Buttons */
    .btn-register {
        background-color: #27ae60;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 8px 20px;
        transition: all 0.2s;
        border: none;
    }

        .btn-register:hover {
            background-color: #219150;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn-delete {
        background-color: white;
        color: #e74c3c;
        border: 1px solid #e74c3c;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-delete:hover {
            background-color: #e74c3c;
            color: white;
        }
</style>

<div class="container mt-4">
    

    <div class="card table-card">
        <div class="table-responsive">
            <table class="table custom-table mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Specialization</th>
                        <th>Joined</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profile in Model)
                    {
                        <tr>
                            <td class="fw-bold">@profile.FullName</td>
                            <td>@profile.User?.Email</td>
                            <td>@(profile.Phone ?? "-")</td>

                            <td>
                                @if (profile.Role == "Admin")
                                {
                                    <span class="role-badge badge-admin">Admin</span>
                                }
                                else if (profile.Role == "Lawyer")
                                {
                                    <span class="role-badge badge-lawyer">Lawyer</span>
                                }
                                else
                                {
                                    <span class="role-badge badge-client">Client</span>
                                }
                            </td>

                            <td>
                                @if (profile.Role == "Lawyer")
                                {
                                    <span class="text-dark">@profile.Specialization</span>
                                }
                                else
                                {
                                    <span class="text-muted small">N/A</span>
                                }
                            </td>

                            <td>
                                @if (profile.DateOfJoining.HasValue)
                                {
                                    @profile.DateOfJoining.Value.ToShortDateString()
                                }
                                else
                                {
                                    @profile.CreatedAt.ToShortDateString()
                                }
                            </td>

                            <td class="text-end">
                                <form asp-controller="Admin" asp-action="DeleteUser" method="post">
                                    <input type="hidden" name="id" value="@profile.UserId" />
                                    <button class="btn btn-sm btn-delete" onclick="return confirm('Are you sure you want to delete @profile.FullName? This cannot be undone.')">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>