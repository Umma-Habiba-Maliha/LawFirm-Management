@model IEnumerable<LawFirmManagement.Models.UserProfile>
@{
    ViewData["Title"] = "All Users";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="//cdn.datatables.net/2.3.6/css/dataTables.dataTables.min.css" />

<style>
    /* Page Header */
    .page-header {
        color: #2c3e50;
        font-weight: 700;
        border-left: 5px solid #2c3e50;
        padding-left: 15px;
    }

    /* Table Container (Card Style) */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden; /* Rounds the table corners */
        border: none;
        padding: 20px; /* Added padding for DataTables controls */
    }

    /* Table Header */
    .custom-table thead {
        background-color: #2c3e50; /* Navy Blue */
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border: none;
        padding: 15px;
    }

    /* Table Body */
    .custom-table td {
        vertical-align: middle;
        padding: 12px 15px;
        color: #34495e;
        border-bottom: 1px solid #ecf0f1;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Role Badges */
    .role-badge {
        padding: 5px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-admin {
        background-color: #fadbd8;
        color: #c0392b;
    }

    .badge-lawyer {
        background-color: #d6eaf8;
        color: #2980b9;
    }

    .badge-client {
        background-color: #d1f2eb;
        color: #16a085;
    }

    /* Action Buttons */
    .btn-register {
        background-color: #27ae60;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 8px 20px;
        transition: all 0.2s;
        border: none;
    }

        .btn-register:hover {
            background-color: #219150;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn-edit {
        background-color: white;
        color: #f39c12;
        border: 1px solid #f39c12;
        font-weight: 500;
        transition: all 0.2s;
        margin-right: 5px;
    }

        .btn-edit:hover {
            background-color: #f39c12;
            color: white;
        }

    .btn-delete {
        background-color: white;
        color: #e74c3c;
        border: 1px solid #e74c3c;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-delete:hover {
            background-color: #e74c3c;
            color: white;
        }

    /* DataTables Overrides */
    .dataTables_wrapper .dataTables_length select {
        padding-right: 25px;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>User Management</h2>

    </div>

    <div class="card table-card">
        <div class="table-responsive">
            <!-- Added ID for DataTable -->
            <table id="myTable" class="table custom-table mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Specialization</th>
                        <th>Joined (Date & Time)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profile in Model)
                    {
                        <tr>
                            <td class="fw-bold">@profile.FullName</td>
                            <td>@profile.User?.Email</td>
                            <td>@(profile.Phone ?? "-")</td>

                            <td>
                                @if (profile.Role == "Admin")
                                {
                                    <span class="role-badge badge-admin">Admin</span>
                                }
                                else if (profile.Role == "Lawyer")
                                {
                                    <span class="role-badge badge-lawyer">Lawyer</span>
                                }
                                else
                                {
                                    <span class="role-badge badge-client">Client</span>
                                }
                            </td>

                            <td>
                                @if (profile.Role == "Lawyer")
                                {
                                    <span class="text-dark">@profile.Specialization</span>
                                }
                                else
                                {
                                    <span class="text-muted small">N/A</span>
                                }
                            </td>

                            <td>
                                <!-- UPDATED: Showing Date AND Time -->
                                @if (profile.DateOfJoining.HasValue)
                                {
                                    <span style="display:none;">@profile.DateOfJoining.Value.ToString("yyyyMMddHHmm")</span> <!-- For Sorting -->
                                    @profile.DateOfJoining.Value.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                                }
                                else
                                {
                                    <span style="display:none;">@profile.CreatedAt.ToString("yyyyMMddHHmm")</span> <!-- For Sorting -->
                                    @profile.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                                }
                            </td>

                            <td class="text-end">
                                <!-- Edit Button -->
                                <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@profile.UserId" class="btn btn-sm btn-edit">
                                    Edit
                                </a>

                                <form asp-controller="Admin" asp-action="DeleteUser" method="post" style="display:inline-block;">
                                    <input type="hidden" name="id" value="@profile.UserId" />

                                    <button class="btn btn-sm btn-delete" onclick="return confirm('Are you sure you want to delete @profile.FullName?')">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery (ensure it's loaded if not already in Layout) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- DataTables JS -->
    <script src="//cdn.datatables.net/2.3.6/js/dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            let table = new DataTable('#myTable');
        });
    </script>
}