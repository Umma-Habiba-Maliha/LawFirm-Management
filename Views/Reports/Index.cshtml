@model LawFirmManagement.Models.ReportViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="//cdn.datatables.net/2.3.6/css/dataTables.dataTables.min.css" />

<style>
    :root {
        --primary: #2c3e50;
        --secondary: #34495e;
        --accent: #3498db;
        --success: #27ae60;
        --warning: #f39c12;
        --bg-color: #f4f6f9;
        --card-bg: #ffffff;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Segoe UI', sans-serif;
    }

    .report-container {
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 60px;
    }

    /* HEADER */
    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 30px;
        padding-top: 20px;
    }

    .report-title {
        font-weight: 800;
        color: var(--primary);
        font-size: 2rem;
        letter-spacing: -0.5px;
        margin: 0;
    }

    .report-subtitle {
        color: #7f8c8d;
        font-size: 0.95rem;
        margin-top: 5px;
    }

    /* CONTROL PANEL */
    .control-panel {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        margin-bottom: 30px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .filter-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 700;
        color: #95a5a6;
        margin-bottom: 8px;
        display: block;
    }

    /* STATS CARDS */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.04);
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.03);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        }

    .stat-card-icon {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 2.5rem;
        opacity: 0.1;
    }

    .stat-value {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary);
        line-height: 1;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 0.9rem;
        font-weight: 600;
    }

    /* Card Themes */
    .stat-card.revenue {
        border-bottom: 4px solid var(--success);
    }

        .stat-card.revenue .stat-value {
            color: var(--success);
        }

    .stat-card.cases {
        border-bottom: 4px solid var(--accent);
    }

    .stat-card.closed {
        border-bottom: 4px solid var(--primary);
    }

    .stat-card.hearings {
        border-bottom: 4px solid var(--warning);
    }

    /* CONTENT TABS */
    .content-card {
        background: var(--card-bg);
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        overflow: hidden;
    }

    .nav-tabs {
        border-bottom: 1px solid #f0f0f0;
        padding: 0 20px;
        background: #fafbfc;
    }

        .nav-tabs .nav-link {
            border: none;
            color: #7f8c8d;
            font-weight: 600;
            padding: 15px 20px;
            font-size: 0.95rem;
            transition: color 0.2s;
        }

            .nav-tabs .nav-link:hover {
                color: var(--primary);
            }

            .nav-tabs .nav-link.active {
                color: var(--primary);
                background: transparent;
                border-bottom: 3px solid var(--primary);
            }

    .tab-content {
        padding: 0;
    }

    /* TABLES */
    .custom-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

        .custom-table thead {
            background-color: #f8f9fa;
        }

        .custom-table th {
            padding: 15px 25px;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #7f8c8d;
            border-bottom: 1px solid #eee;
            border-top: none;
        }

        .custom-table td {
            padding: 15px 25px;
            vertical-align: middle;
            border-bottom: 1px solid #f4f4f4;
            color: #2c3e50;
            font-size: 0.95rem;
        }

        .custom-table tbody tr:hover {
            background-color: #fcfcfc;
        }

    

    .control-panel, .no-print, header, footer {
        display: none !important;
    }

    .report-container {
        width: 100%;
        max-width: none;
        margin: 0;
        padding: 0;
    }

    .stat-card {
        border: 1px solid #ddd;
        box-shadow: none;
    }

    .content-card {
        box-shadow: none;
        border: none;
    }

    .nav-tabs {
        display: none;
    }

    .tab-pane {
        display: block !important;
        opacity: 1 !important;
        margin-bottom: 30px;
        page-break-inside: avoid;
    }

    }
</style>

<div class="report-container">

    <!-- HEADER -->
    <div class="dashboard-header">
        <div>
            <h1 class="report-title">Analytics Dashboard</h1>
            <p class="report-subtitle">Performance metrics and financial overview</p>
        </div>
        <div class="no-print">
            <button onclick="window.print()" class="btn btn-dark"><i class="bi bi-printer me-2"></i> Print Report</button>
            <a asp-action="Download"
               asp-route-reportType="@Model.ReportType"
               asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
               asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
               class="btn btn-outline-dark ms-2" target="_blank">
                <i class="bi bi-download me-2"></i> Export PDF
            </a>
        </div>
    </div>

    <!-- 1. FILTER CONTROLS -->
    <div class="control-panel no-print">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="reportType" value="Custom" />

            <div class="col-md-5">
                <span class="filter-label">Quick Select</span>
                <div class="btn-group w-100 shadow-sm" role="group">
                    <a asp-action="Index" asp-route-reportType="Daily" class="btn btn-light border @(Model.ReportType == "Daily" ? "active bg-secondary text-white" : "")">Daily</a>
                    <a asp-action="Index" asp-route-reportType="Weekly" class="btn btn-light border @(Model.ReportType == "Weekly" ? "active bg-secondary text-white" : "")">Weekly</a>
                    <a asp-action="Index" asp-route-reportType="Monthly" class="btn btn-light border @(Model.ReportType == "Monthly" ? "active bg-secondary text-white" : "")">Monthly</a>
                    <a asp-action="Index" asp-route-reportType="Yearly" class="btn btn-light border @(Model.ReportType == "Yearly" ? "active bg-secondary text-white" : "")">Yearly</a>
                </div>
            </div>

            <div class="col-md-3">
                <span class="filter-label">From Date</span>
                <input type="date" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="col-md-3">
                <span class="filter-label">To Date</span>
                <input type="date" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="col-md-1">
                <button class="btn btn-primary w-100"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>

    <!-- 2. SUMMARY STATS -->
    <div class="stats-grid">
        <div class="stat-card revenue">
            <i class="bi bi-wallet2 stat-card-icon"></i>
            <div class="stat-value">৳@Model.TotalRevenue.ToString("N0")</div>
            <div class="stat-label">
                @if (User.IsInRole("Client"))
                {
                    <span>Total Paid</span>
                }
                else if (User.IsInRole("Lawyer"))
                {

                    <span>My Earnings</span>
                }
                else
                {

                    <span>Total Revenue</span>
                }
            </div>
        </div>

        <div class="stat-card cases">
            <i class="bi bi-briefcase stat-card-icon"></i>
            <div class="stat-value">@Model.TotalCases</div>
            <div class="stat-label">Total Cases</div>
        </div>

        <div class="stat-card closed">
            <i class="bi bi-check-circle stat-card-icon"></i>
            <div class="stat-value">@Model.ClosedCases</div>
            <div class="stat-label">Completed</div>
        </div>

        <div class="stat-card hearings">
            <i class="bi bi-calendar-event stat-card-icon"></i>
            <div class="stat-value">@Model.HearingList.Count</div>
            <div class="stat-label">Hearings Held</div>
        </div>
    </div>

    <!-- 3. DETAILED DATA -->
    <div class="content-card">
        <ul class="nav nav-tabs no-print" id="reportTabs" role="tablist">
            <li class="nav-item"><a class="nav-link active" id="cases-tab" data-bs-toggle="tab" href="#cases" role="tab">Case History</a></li>
            <li class="nav-item"><a class="nav-link" id="finance-tab" data-bs-toggle="tab" href="#finance" role="tab">Financials</a></li>
            <li class="nav-item"><a class="nav-link" id="hearings-tab" data-bs-toggle="tab" href="#hearings" role="tab">Hearing Log</a></li>
        </ul>

        <div class="tab-content">
            <!-- CASES TAB -->
            <div class="tab-pane fade show active" id="cases" role="tabpanel">
                <h5 class="d-none d-print-block p-4 mb-0">Case History</h5>
                <table id="tableCases" class="custom-table table-hover">
                    <thead><tr><th>Title</th><th>Type</th><th>Filed On</th><th>Status</th></tr></thead>
                    <tbody>
                        @foreach (var c in Model.CaseList)
                        {
                            <tr>
                                <td class="fw-bold">@c.CaseTitle</td>
                                <td>@c.CaseType</td>
                                <td>@c.StartDate.ToShortDateString()</td>
                                <td>
                                    @if (c.Status == LawFirmManagement.Models.CaseStatus.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (c.Status == LawFirmManagement.Models.CaseStatus.Closed)
                                    {

                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- FINANCIALS TAB -->
            <div class="tab-pane fade" id="finance" role="tabpanel">
                <h5 class="d-none d-print-block p-4 mb-0">Financials</h5>
                <table id="tableFinance" class="custom-table table-hover">
                    <thead><tr><th>Date</th><th>Case</th><th>Method</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var p in Model.PaymentList)
                        {
                            <tr>
                                <td>@p.PaymentDate.ToShortDateString()</td>
                                <td>@p.Case?.CaseTitle</td>
                                <td><span class="badge bg-light text-dark border">@p.PaymentMethod</span></td>
                                <td class="text-end fw-bold">
                                    @if (User.IsInRole("Lawyer"))
                                    {
                                        <span>৳@p.LawyerShare.ToString("N2")</span>
                                    }
                                    else if (User.IsInRole("Admin"))
                                    {
                                        <span>৳@p.TotalAmount.ToString("N2")</span>
                                        <div class="small text-muted" style="font-weight:normal;">Admin Share: ৳@p.AdminShare.ToString("N2")</div>
                                    }
                                    else
                                    {
                                        <span>৳@p.TotalAmount.ToString("N2")</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- HEARINGS TAB -->
            <div class="tab-pane fade" id="hearings" role="tabpanel">
                <h5 class="d-none d-print-block p-4 mb-0">Hearings</h5>
                <table id="tableHearings" class="custom-table table-hover">
                    <thead><tr><th>Date</th><th>Case</th><th>Court</th><th>Notes</th></tr></thead>
                    <tbody>
                        @foreach (var h in Model.HearingList)
                        {
                            <tr>
                                <td>@h.HearingDate.ToString("g")</td>
                                <td>@h.Case?.CaseTitle</td>
                                <td>@h.CourtName</td>
                                <td class="text-muted small">@h.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-5 text-muted small d-print-block">
        Report generated on @DateTime.Now.ToString("f") | Law Firm Management System
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdn.datatables.net/2.3.6/js/dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            var options = { paging: true, info: false, searching: true, lengthChange: false };
            new DataTable('#tableCases', options);
            new DataTable('#tableFinance', options);
            new DataTable('#tableHearings', options);
        });
    </script>
}