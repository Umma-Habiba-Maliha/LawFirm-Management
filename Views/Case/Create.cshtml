@model LawFirmManagement.Models.CreateCaseViewModel

@{
    ViewData["Title"] = "Create New Case";
}

<!-- Custom CSS -->
<style>
    /* Background Area */
    .case-form-wrapper {
        background: linear-gradient(rgba(44, 62, 80, 0.85), rgba(44, 62, 80, 0.7)), url('/images/legal-bg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    /* The White Card */
    .form-card {
        background: white;
        padding: 2.5rem;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        width: 100%;
        max-width: 800px; /* Wider layout for the 2-column grid */
        border-top: 5px solid #2c3e50; /* Navy Blue Accent */
    }

        /* Headings */
        .form-card h2 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    .form-section-divider {
        border-top: 1px solid #e9ecef;
        margin: 1.5rem 0;
    }

    /* Labels & Inputs */
    .form-label {
        color: #34495e;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        height: 48px;
        border-radius: 6px;
        border: 1px solid #ced4da;
        transition: border-color 0.2s, box-shadow 0.2s;
        font-size: 0.95rem;
        background-color: #fff;
    }

        .form-control:focus, .form-select:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.15);
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
            opacity: 1;
            cursor: not-allowed;
            color: #7f8c8d;
            font-weight: 700;
        }

    /* Textarea specific */
    textarea.form-control {
        height: auto;
        min-height: 120px;
        resize: vertical;
    }

    /* Primary Button */
    .btn-navy {
        background-color: #2c3e50;
        border-color: #2c3e50;
        color: white;
        height: 48px;
        font-weight: 600;
        border-radius: 6px;
        padding: 0 30px;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-navy:hover {
            background-color: #1a252f;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            color: white;
        }

    /* Secondary Button */
    .btn-outline-cancel {
        height: 48px;
        font-weight: 500;
        color: #7f8c8d;
        border: 1px solid #bdc3c7;
        background: white;
        border-radius: 6px;
        padding: 0 25px;
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-outline-cancel:hover {
            background-color: #ecf0f1;
            color: #2c3e50;
            border-color: #b0b3b8;
        }

    .input-group-text {
        background-color: #f1f3f5;
        border-color: #ced4da;
        color: #6c757d;
    }
</style>

<div class="case-form-wrapper">
    <div class="form-card">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Create New Case</h2>
            <i class="bi bi-folder-plus fs-2 text-muted"></i>
        </div>
        <p class="text-muted">Enter case details. Lawyers will be automatically filtered by specialization.</p>

        <!-- Server Error Messages -->
        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

        <div class="form-section-divider"></div>

        <form asp-action="Create" method="post">

            <!-- Case Info Section -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Case Title</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        <input asp-for="CaseTitle" class="form-control" placeholder="e.g. Smith vs. Jones" />
                    </div>
                    <span asp-validation-for="CaseTitle" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label class="form-label">Case Type</label>
                    <select asp-for="CaseType" class="form-select" id="CaseTypeDropdown">
                        <option value="">-- Select Type --</option>
                        <option value="Civil">Civil Litigation</option>
                        <option value="Criminal">Criminal Defense</option>
                        <option value="Family">Family Law</option>
                        <option value="Corporate">Corporate Law</option>
                        <option value="Property">Real Estate / Property</option>
                    </select>
                    <span asp-validation-for="CaseType" class="text-danger small"></span>
                </div>
            </div>

            <!-- Fee Section -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Total Fee (Fixed)</label>
                    <div class="input-group">
                        <span class="input-group-text">৳</span>
                        <input asp-for="TotalFee" type="number" class="form-control" id="TotalFeeInput" readonly />
                    </div>
                    <span asp-validation-for="TotalFee" class="text-danger small"></span>
                </div>

                <!-- ADMIN SHARE INPUT (Updated with step="0.01") -->
                <div class="col-md-6 mb-4">
                    <label class="form-label">Admin Share (%)</label>
                    <div class="input-group">
                        <!-- Added step="0.01" to allow decimals like 2.5 -->
                        <input asp-for="AdminSharePercentage" type="number" class="form-control" min="0" max="100" step="0.01" placeholder="10.0" />
                        <span class="input-group-text">%</span>
                    </div>
                    <small class="text-muted">Default is 10%. Decimals allowed (e.g. 2.5).</small>
                    <span asp-validation-for="AdminSharePercentage" class="text-danger small"></span>
                </div>
            </div>

            <!-- Personnel Section -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Assign Client</label>
                    <select asp-for="ClientId" asp-items="Model.ClientList" class="form-select">
                        <option value="">-- Select Client --</option>
                    </select>
                    <span asp-validation-for="ClientId" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label class="form-label">Assign Lawyer</label>
                    <select asp-for="LawyerId" asp-items="Model.LawyerList" class="form-select" id="LawyerDropdown">
                        <option value="">-- Select Case Type First --</option>
                    </select>
                    <span asp-validation-for="LawyerId" class="text-danger small"></span>
                    <small id="LawyerHelp" class="form-text text-muted">Lawyers are filtered based on Case Type.</small>
                </div>
            </div>

            <!-- Details Section -->
            <div class="mb-4">
                <label class="form-label">Case Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter detailed case notes..."></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="form-section-divider"></div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-cancel">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
                <button type="submit" class="btn btn-navy">
                    <i class="bi bi-check2-circle me-2"></i> Create Case File
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // 1. Capture all lawyers loaded from the server immediately
            var allLawyers = $("#LawyerDropdown option").clone();

            // Clear the dropdown initially (force user to pick type first)
            $("#LawyerDropdown").html('<option value="">-- Select Case Type First --</option>');

            $('#CaseTypeDropdown').change(function() {
                var selectedType = $(this).val();
                var feeInput = document.getElementById('TotalFeeInput');
                var fee = 0;

                // 2. Auto-Fill Fee
                switch(selectedType) {
                    case 'Civil': fee = 50000; break;
                    case 'Criminal': fee = 80000; break;
                    case 'Family': fee = 30000; break;
                    case 'Corporate': fee = 120000; break;
                    case 'Property': fee = 60000; break;
                }
                feeInput.value = fee;

                // 3. Filter Lawyers Logic
                var $lawyerDropdown = $("#LawyerDropdown");
                $lawyerDropdown.empty(); // Clear current

                if (selectedType) {
                    var count = 0;
                    $lawyerDropdown.append('<option value="">-- Select ' + selectedType + ' Lawyer --</option>');

                    allLawyers.each(function() {
                        var text = $(this).text();
                        var value = $(this).val();

                        // Logic: Keep if it matches the Type AND isn't full
                        if (text.includes("(" + selectedType + ")")) {

                            // Check if FULL (Controller sends [FULL] or [5/5])
                            if (text.includes("[FULL]") || text.includes("[5/5]")) {
                                // Disable fully booked lawyers
                                $(this).attr('disabled', 'disabled');
                            }

                            $lawyerDropdown.append($(this));
                            count++;
                        }
                    });

                    if (count === 0) {
                        $lawyerDropdown.append('<option disabled>No ' + selectedType + ' lawyers available.</option>');
                    }
                    $("#LawyerHelp").text("Showing " + count + " specialized lawyers.");
                } else {
                    $lawyerDropdown.append('<option value="">-- Select Case Type First --</option>');
                    $("#LawyerHelp").text("Select Case Type first.");
                }
            });
        });
    </script>
}