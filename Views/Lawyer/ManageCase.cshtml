@model LawFirmManagement.Models.Case
@{
    ViewData["Title"] = "Manage Case";
}

<!-- Custom CSS -->
<style>
    /* Page Background */
    .manage-wrapper {
        background-color: #f8f9fa;
        padding-bottom: 50px;
    }

    /* Page Header */
    .case-header {
        margin-bottom: 25px;
        padding-top: 20px;
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 15px;
    }

    .case-title {
        color: #2c3e50;
        font-weight: 800;
        font-size: 1.8rem;
    }

    /* Case Summary Panel */
    .summary-panel {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border-left: 5px solid #2c3e50; /* Navy Accent */
        padding: 25px;
        margin-bottom: 30px;
    }

    .summary-label {
        color: #95a5a6;
        font-size: 0.8rem;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.5px;
        display: block;
        margin-bottom: 5px;
    }

    .summary-value {
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .desc-text {
        color: #34495e;
        line-height: 1.6;
    }

    /* Section Headers */
    .section-header {
        color: #34495e;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        margin-top: 20px; /* Spacing between tables */
    }

        .section-header i {
            margin-right: 10px;
            color: #2c3e50;
        }

    /* Table Styling */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        border: none;
        margin-bottom: 30px;
    }

    .custom-table thead {
        background-color: #34495e;
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        font-size: 0.85rem;
        border: none;
        padding: 12px 15px;
    }

    .custom-table td {
        vertical-align: middle;
        padding: 12px 15px;
        color: #34495e;
        border-bottom: 1px solid #ecf0f1;
        font-size: 0.95rem;
    }

    /* Schedule Form Card (Green) */
    .schedule-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        padding: 25px;
        border-top: 5px solid #27ae60;
        margin-bottom: 25px;
    }

    /* Upload Form Card (Blue) */
    .upload-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        padding: 25px;
        border-top: 5px solid #3498db;
    }

    .form-title {
        font-weight: 700;
        color: #2c3e50;
        border-bottom: 1px solid #ecf0f1;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #dde1e5;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.15);
        }

    /* Buttons */
    .btn-update {
        border: 1px solid #2c3e50;
        color: #2c3e50;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-update:hover {
            background-color: #2c3e50;
            color: white;
        }

    .btn-add-hearing {
        background-color: #27ae60;
        color: white;
        font-weight: 600;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-add-hearing:hover {
            background-color: #219150;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn-upload {
        background-color: #3498db;
        color: white;
        font-weight: 600;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-upload:hover {
            background-color: #2980b9;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .closed-alert {
        background-color: #e9ecef;
        border: 1px solid #dee2e6;
        color: #495057;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin-top: 20px;
    }

    /* --- NEW DOWNLOAD BUTTON STYLE --- */
    .btn-download-link {
        color: #2c3e50;
        border: 1px solid #dde1e5;
        background-color: #fff;
        padding: 6px 15px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-download-link:hover {
            background-color: #3498db;
            border-color: #3498db;
            color: white;
            box-shadow: 0 2px 5px rgba(52, 152, 219, 0.3);
        }
</style>

<div class="manage-wrapper">
    <div class="container">

        <!-- Header & Status -->
        <div class="d-flex justify-content-between align-items-center case-header">
            <h2 class="case-title">@Model.CaseTitle</h2>

            <form asp-action="UpdateStatus" class="d-flex gap-2 align-items-center bg-white p-2 rounded shadow-sm">
                <input type="hidden" name="caseId" value="@Model.Id" />
                <label class="small fw-bold text-muted mb-0 me-1">Status:</label>
                <select name="status" class="form-select form-select-sm" style="width: auto; border-color: #bdc3c7;" asp-items="Html.GetEnumSelectList<LawFirmManagement.Models.CaseStatus>()"></select>
                <button class="btn btn-sm btn-update">Update</button>
            </form>
        </div>

        <!-- Case Summary Panel -->
        <div class="summary-panel">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <span class="summary-label">Client Email</span>
                    <div class="summary-value">
                        <i class="bi bi-person-circle me-2 text-muted"></i>@Model.Client?.Email
                    </div>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <span class="summary-label">Case Type</span>
                    <div class="summary-value">
                        <span class="badge bg-light text-dark border">@Model.CaseType</span>
                    </div>
                </div>
                <div class="col-md-5">
                    <span class="summary-label">Description</span>
                    <div class="desc-text">@Model.Description</div>
                </div>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success shadow-sm mb-3">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["msg"]
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger shadow-sm mb-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["error"]
            </div>
        }

        <div class="row">
            <!-- Left Column: Tables -->
            <div class="col-lg-8 mb-4">

                <!-- HEARINGS TABLE -->
                <h4 class="section-header"><i class="bi bi-calendar-event"></i> Hearing Schedule</h4>
                <div class="table-card mb-5">
                    <div class="table-responsive">
                        <table class="table custom-table mb-0">
                            <thead>
                                <tr>
                                    <th>Date & Time</th>
                                    <th>Court</th>
                                    <th>Notes</th>
                                    <th class="text-end">Actions</th> <!-- New Column -->
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Hearings != null && (ViewBag.Hearings as List<LawFirmManagement.Models.Hearing>).Any())
                                {
                                    foreach (var h in ViewBag.Hearings as List<LawFirmManagement.Models.Hearing>)
                                    {
                                        <tr>
                                            <td class="fw-bold">@h.HearingDate.ToString("MMM dd, yyyy h:mm tt")</td>
                                            <td>@h.CourtName</td>
                                            <td class="text-muted small">@h.Notes</td>
                                            <td class="text-end">
                                                <!-- Edit Button -->
                                                <a asp-action="EditHearing" asp-route-id="@h.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <!-- Delete Button -->
                                                <form asp-action="DeleteHearing" method="post" style="display:inline-block;">
                                                    <input type="hidden" name="id" value="@h.Id" />
                                                    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this hearing?');" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            No hearings scheduled yet.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- 2. DOCUMENTS TABLE -->
                <h4 class="section-header"><i class="bi bi-file-earmark-text"></i> Case Documents</h4>
                <div class="table-card">
                    <div class="table-responsive">
                        <table class="table custom-table mb-0">
                            <thead>
                                <tr>
                                    <th>File Name</th>
                                    <th>Uploaded By</th>
                                    <th>Date</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Documents != null && (ViewBag.Documents as List<LawFirmManagement.Models.CaseDocument>).Any())
                                {
                                    foreach (var doc in ViewBag.Documents as List<LawFirmManagement.Models.CaseDocument>)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark-pdf text-danger me-2"></i>@doc.FileName
                                            </td>
                                            <td class="text-muted small">@doc.UploadedBy</td>
                                            <td class="text-muted small">@doc.UploadedAt.ToShortDateString()</td>
                                            <td class="text-end">
                                                <!-- FIXED DOWNLOAD BUTTON -->
                                                <a asp-action="DownloadDocument" asp-route-id="@doc.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            No documents uploaded yet.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <!-- Right Column: Action Forms -->
            <div class="col-lg-4">

                @if (Model.Status != LawFirmManagement.Models.CaseStatus.Closed)
                {
                    <!-- 1. SCHEDULE HEARING FORM -->
                    <div class="schedule-card">
                        <h5 class="form-title">Schedule New Hearing</h5>
                        <form asp-action="AddHearing" method="post">
                            <input type="hidden" name="CaseId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Date & Time</label>
                                <input type="datetime-local" name="HearingDate" class="form-control" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Court Name</label>
                                <input type="text" name="CourtName" class="form-control" placeholder="e.g. Superior Court Room 4B" required />
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Notes</label>
                                <textarea name="Notes" class="form-control" rows="2" placeholder="Additional details..."></textarea>
                            </div>

                            <button type="submit" class="btn btn-add-hearing">
                                <i class="bi bi-plus-circle me-2"></i> Add to Schedule
                            </button>
                        </form>
                    </div>

                    <!-- 2. UPLOAD DOCUMENT FORM -->
                    <div class="upload-card">
                        <h5 class="form-title">Upload Document</h5>

                        <form asp-action="UploadDocument" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="caseId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Select File</label>
                                <input type="file" name="file" class="form-control" required />
                                <small class="text-muted mt-1 d-block">PDF, Word, or Images only.</small>
                            </div>

                            <button class="btn btn-upload">
                                <i class="bi bi-cloud-upload me-2"></i> Upload File
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <!-- CLOSED CASE MESSAGE -->
                    <div class="closed-alert">
                        <i class="bi bi-lock-fill fs-1 d-block mb-2 text-muted"></i>
                        <h5 class="text-secondary">Case Closed</h5>
                        <p class="small mb-0">Hearing scheduling and document uploads are disabled for closed cases. Re-open the case to enable actions.</p>
                    </div>
                }

            </div>
        </div>
    </div>
</div>