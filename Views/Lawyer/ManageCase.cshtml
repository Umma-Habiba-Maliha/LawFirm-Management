@model LawFirmManagement.Models.Case
@{
    ViewData["Title"] = "Manage Case";
}

<style>
    /* Page Background */
    .manage-wrapper {
        background-color: #f8f9fa;
        padding-bottom: 50px;
    }

    /* Page Header */
    .case-header {
        margin-bottom: 25px;
        padding-top: 20px;
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 15px;
    }

    .case-title {
        color: #2c3e50;
        font-weight: 800;
        font-size: 1.8rem;
    }

    /* Case Summary Panel */
    .summary-panel {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border-left: 5px solid #2c3e50; /* Navy Accent */
        padding: 25px;
        margin-bottom: 30px;
    }

    .summary-label {
        color: #95a5a6;
        font-size: 0.8rem;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.5px;
        display: block;
        margin-bottom: 5px;
    }

    .summary-value {
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .desc-text {
        color: #34495e;
        line-height: 1.6;
    }

    /* Section Headers */
    .section-header {
        color: #34495e;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

        .section-header i {
            margin-right: 10px;
            color: #2c3e50;
        }

    /* Table Styling */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        border: none;
    }

    .custom-table thead {
        background-color: #34495e;
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        font-size: 0.85rem;
        border: none;
        padding: 12px 15px;
    }

    .custom-table td {
        vertical-align: middle;
        padding: 12px 15px;
        color: #34495e;
        border-bottom: 1px solid #ecf0f1;
    }

    /* Schedule Form Card */
    .schedule-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        padding: 25px;
        border-top: 5px solid #27ae60; /* Green Accent */
    }

    .form-title {
        font-weight: 700;
        color: #2c3e50;
        border-bottom: 1px solid #ecf0f1;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #dde1e5;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #27ae60;
            box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
        }

    /* Buttons */
    .btn-update {
        border: 1px solid #2c3e50;
        color: #2c3e50;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-update:hover {
            background-color: #2c3e50;
            color: white;
        }

    .btn-add-hearing {
        background-color: #27ae60;
        color: white;
        font-weight: 600;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-add-hearing:hover {
            background-color: #219150;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>

<div class="manage-wrapper">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center case-header">
            <h2 class="case-title">@Model.CaseTitle</h2>

            <form asp-action="UpdateStatus" class="d-flex gap-2 align-items-center bg-white p-2 rounded shadow-sm">
                <input type="hidden" name="caseId" value="@Model.Id" />
                <label class="small fw-bold text-muted mb-0 me-1">Status:</label>
                <select name="status" class="form-select form-select-sm" style="width: auto; border-color: #bdc3c7;" asp-items="Html.GetEnumSelectList<LawFirmManagement.Models.CaseStatus>()"></select>
                <button class="btn btn-sm btn-update">Update</button>
            </form>
        </div>

        <div class="summary-panel">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <span class="summary-label">Client Email</span>
                    <div class="summary-value">
                        <i class="bi bi-person-circle me-2 text-muted"></i>@Model.Client?.Email
                    </div>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <span class="summary-label">Case Type</span>
                    <div class="summary-value">
                        <span class="badge bg-light text-dark border">@Model.CaseType</span>
                    </div>
                </div>
                <div class="col-md-5">
                    <span class="summary-label">Description</span>
                    <div class="desc-text">@Model.Description</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mb-4">
                <h4 class="section-header"><i class="bi bi-calendar-event"></i> Hearing Schedule</h4>

                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-success shadow-sm mb-3">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["msg"]
                    </div>
                }

                <div class="table-card">
                    <div class="table-responsive">
                        <table class="table custom-table mb-0">
                            <thead>
                                <tr>
                                    <th>Date & Time</th>
                                    <th>Court</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Hearings != null && (ViewBag.Hearings as List<LawFirmManagement.Models.Hearing>).Any())
                                {
                                    foreach (var h in ViewBag.Hearings as List<LawFirmManagement.Models.Hearing>)
                                    {
                                        <tr>
                                            <td class="fw-bold">@h.HearingDate.ToString("MMM dd, yyyy h:mm tt")</td>
                                            <td>@h.CourtName</td>
                                            <td class="text-muted small">@h.Notes</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">
                                            No hearings scheduled yet.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="schedule-card">
                    <h5 class="form-title">Schedule New Hearing</h5>

                    <form asp-action="AddHearing" method="post">
                        <input type="hidden" name="CaseId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Date & Time</label>
                            <input type="datetime-local" name="HearingDate" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                Court Name

                                [Image of court room]
                            </label>
                            <input type="text" name="CourtName" class="form-control" placeholder="e.g. Superior Court Room 4B" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Notes</label>
                            <textarea name="Notes" class="form-control" rows="3" placeholder="Additional details..."></textarea>
                        </div>

                        <button class="btn btn-add-hearing">
							<i class="bi bi-plus-circle me-2"></i> Add to Schedule<a href="c:\visualproject\lawfirmmanagement\lawfirm-management\views\lawyer\managecase.cshtml">c:\visualproject\lawfirmmanagement\lawfirm-management\views\lawyer\managecase.cshtml</a>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>