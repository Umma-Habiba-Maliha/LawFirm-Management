@model IEnumerable<LawFirmManagement.Models.Case>
@{
    ViewData["Title"] = "Lawyer Dashboard";

    var pendingCases = Model.Where(c => c.Status == LawFirmManagement.Models.CaseStatus.Pending).ToList();

    // EXCLUDE REJECTED CASES from Active List
    var activeCases = Model.Where(c => c.Status != LawFirmManagement.Models.CaseStatus.Pending && c.Status != LawFirmManagement.Models.CaseStatus.Rejected).ToList();
}

<!-- Custom CSS (Keep existing styles) -->
<style>
    /* ... Keep previous styles ... */

    /* NEW REJECT BUTTON STYLE */
    .btn-reject {
        background-color: #dc3545;
        color: white;
        font-weight: 600;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-reject:hover {
            background-color: #bb2d3b;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            color: white;
        }

    /* ... Keep other styles ... */
    /* Page Container */
    .dashboard-wrapper {
        background-color: #f8f9fa;
        padding-bottom: 50px;
    }

    .page-header {
        color: #2c3e50;
        font-weight: 700;
        border-left: 5px solid #2c3e50;
        padding-left: 15px;
        margin-bottom: 30px;
        padding-top: 20px;
    }

    .stat-card {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
        border: none;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .stat-card h5 {
            color: #7f8c8d;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .stat-card h3 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0;
        }

    .stat-icon {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 2.5rem;
        opacity: 0.2;
    }

    .card-active {
        border-left: 5px solid #27ae60;
    }

        .card-active h3, .card-active .stat-icon {
            color: #27ae60;
        }

    .card-pending {
        border-left: 5px solid #f39c12;
    }

        .card-pending h3, .card-pending .stat-icon {
            color: #f39c12;
        }

    .card-closed {
        border-left: 5px solid #95a5a6;
    }

        .card-closed h3, .card-closed .stat-icon {
            color: #95a5a6;
        }

    .request-card {
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-left: 5px solid #ffc107;
    }

    .request-info h5 {
        margin: 0;
        color: #856404;
        font-weight: 700;
    }

    .request-info p {
        margin: 5px 0 0 0;
        font-size: 0.9rem;
        color: #856404;
        opacity: 0.9;
    }

    .btn-accept {
        background-color: #198754;
        color: white;
        font-weight: 600;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-accept:hover {
            background-color: #157347;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            color: white;
        }

    .table-section-title {
        color: #34495e;
        font-weight: 700;
        margin-bottom: 15px;
        margin-top: 30px;
        display: flex;
        align-items: center;
    }

    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .custom-table thead {
        background-color: #2c3e50;
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border: none;
        padding: 15px;
    }

    .custom-table td {
        vertical-align: middle;
        padding: 15px;
        color: #34495e;
        border-bottom: 1px solid #ecf0f1;
        font-size: 0.95rem;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .type-badge {
        background-color: #ecf0f1;
        color: #5d6d7e;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        border: 1px solid #d5dbdb;
    }

    .status-badge {
        padding: 5px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-closed {
        background-color: #e2e3e5;
        color: #383d41;
    }

    .btn-manage {
        background-color: #2c3e50;
        color: white;
        border-radius: 5px;
        font-size: 0.85rem;
        padding: 6px 15px;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-manage:hover {
            background-color: #1a252f;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>

<div class="dashboard-wrapper">
    <div class="container">
        <h2 class="page-header">Lawyer Dashboard</h2>

        <!-- 1. STATS ROW -->
        <div class="row mb-5 g-4">
            <div class="col-md-4">
                <div class="stat-card card-active">
                    <h5>Active Cases</h5>
                    <h3>@activeCases.Count(x => x.Status == LawFirmManagement.Models.CaseStatus.Active)</h3>
                    <i class="bi bi-play-circle-fill stat-icon"></i>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card card-pending">
                    <h5>New Requests</h5>
                    <h3>@pendingCases.Count()</h3>
                    <i class="bi bi-bell-fill stat-icon"></i>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card card-closed">
                    <h5>Closed Cases</h5>
                    <h3>@activeCases.Count(x => x.Status == LawFirmManagement.Models.CaseStatus.Closed)</h3>
                    <i class="bi bi-archive-fill stat-icon"></i>
                </div>
            </div>
        </div>

        <!-- 2. SUCCESS/ERROR MESSAGES -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success shadow-sm mb-4"><i class="bi bi-check-circle-fill me-2"></i>@TempData["msg"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger shadow-sm mb-4"><i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["error"]</div>
        }

        <!-- 3. NEW CASE REQUESTS (PENDING) -->
        @if (pendingCases.Any())
        {
            <h4 class="table-section-title text-warning" style="color:#d35400">
                <i class="bi bi-exclamation-circle-fill me-2"></i>New Assignments Waiting Approval
            </h4>

            @foreach (var item in pendingCases)
            {
                <div class="request-card">
                    <div class="request-info">
                        <h5>@item.CaseTitle</h5>
                        <p>
                            <strong>Type:</strong> @item.CaseType |
                            <strong>Client:</strong> @item.Client?.Email
                        </p>
                        <p class="mt-2 text-dark small fst-italic">"@item.Description"</p>
                    </div>
                    <div class="d-flex gap-2">
                        <!-- ACCEPT BUTTON -->
                        <form asp-action="AcceptCase" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-accept shadow-sm">
                                <i class="bi bi-check-lg"></i> Accept
                            </button>
                        </form>

                        <!-- REJECT BUTTON -->
                        <form asp-action="RejectCase" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-reject shadow-sm" onclick="return confirm('Are you sure you want to reject this case?');">
                                <i class="bi bi-x-lg"></i> Reject
                            </button>
                        </form>
                    </div>
                </div>
            }
            <hr class="my-5" />
        }

        <!-- 4. ACTIVE CASELOAD TABLE -->
        <h4 class="table-section-title">
            <i class="bi bi-briefcase-fill me-2"></i>My Active Caseload
        </h4>

        <div class="table-card">
            <div class="table-responsive">
                <table class="table custom-table mb-0">
                    <thead>
                        <tr>
                            <th>Case Title</th>
                            <th>Type</th>
                            <th>Client</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (activeCases.Any())
                        {
                            @foreach (var item in activeCases)
                            {
                                <tr>
                                    <td class="fw-bold">@item.CaseTitle</td>
                                    <td><span class="type-badge">@item.CaseType</span></td>
                                    <td>@item.Client?.Email</td>
                                    <td>
                                        @if (item.Status == LawFirmManagement.Models.CaseStatus.Active)
                                        {
                                            <span class="status-badge status-active">Active</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-closed">Closed</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <!-- MANAGE BUTTON (Only Visible Here) -->
                                        <a asp-action="ManageCase" asp-route-id="@item.Id" class="btn btn-manage">
                                            Manage Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-folder2-open fs-1 d-block mb-2"></i>
                                    You have no active cases. Check "New Requests" above.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>