@model LawFirmManagement.Models.Hearing

@{
    ViewData["Title"] = "Edit Hearing";
}

<style>
    .edit-wrapper {
        background-color: #f8f9fa;
        min-height: 85vh;
        padding: 40px 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-card {
        background: white;
        padding: 2.5rem;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        width: 100%;
        max-width: 500px;
        border-top: 5px solid #f39c12;
    }

    .form-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    .btn-save {
        background-color: #f39c12;
        color: white;
        border: none;
        font-weight: 600;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .btn-save:hover {
            background-color: #e67e22;
            transform: translateY(-1px);
        }
</style>

<div class="edit-wrapper">
    <div class="form-card">
        <h3 class="form-title">Edit Hearing Details</h3>

        <form asp-action="EditHearing" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CaseId" />

            <div class="mb-3">
                <label class="form-label fw-bold">Date & Time</label>
                <input asp-for="HearingDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="HearingDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Court Name</label>
                <input asp-for="CourtName" class="form-control" />
                <span asp-validation-for="CourtName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="ManageCase" asp-route-id="@Model.CaseId" class="btn btn-outline-secondary w-50">Cancel</a>
                <button type="submit" class="btn btn-save w-50">Update Hearing</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}