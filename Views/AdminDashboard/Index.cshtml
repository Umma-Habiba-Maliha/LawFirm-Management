@model LawFirmManagement.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    /* Page Background */
    .dashboard-container {
        background-color: #f8f9fa;
        padding-bottom: 40px;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 30px;
        padding-top: 20px;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 10px;
    }

    /* --- FIXED STATS CARD --- */
    .stat-card {
        background: white;
        border: none;
        border-radius: 12px; /* Slightly rounder */
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        position: relative; /* Anchor for absolute icon */
        overflow: hidden; /* CRITICAL: Cuts off anything sticking out */
        padding: 25px;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    /* Content Wrapper (Z-Index ensures text is ON TOP of icon) */
    .stat-content {
        position: relative;
        z-index: 5;
    }

    .stat-card h5 {
        color: #7f8c8d;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .stat-card h2 {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 0;
        line-height: 1.2;
    }

    /* --- THE ICON FIX (Watermark Style) --- */
    .stat-icon-watermark {
        position: absolute;
        top: -10px; /* Moved slightly up */
        right: -10px; /* Moved slightly right */
        font-size: 5rem; /* Very Large */
        opacity: 0.1; /* Very Transparent */
        z-index: 1; /* Behind text */
        transform: rotate(15deg); /* Stylish tilt */
        pointer-events: none; /* Click-through */
    }

    /* Border & Color Accents */
    .border-clients {
        border-left: 5px solid #16a085;
    }

    .text-clients {
        color: #16a085;
    }

    .border-lawyers {
        border-left: 5px solid #2c3e50;
    }

    .text-lawyers {
        color: #2c3e50;
    }

    .border-pending {
        border-left: 5px solid #e74c3c;
    }

    .text-pending {
        color: #e74c3c;
    }

    /* Revenue Specifics */
    .border-revenue {
        border-left: 5px solid #2ecc71;
    }

    .text-revenue {
        color: #2ecc71;
    }

    .card-link {
        font-size: 0.8rem;
        text-decoration: none;
        font-weight: 700;
        margin-top: 15px;
        display: inline-block;
        text-transform: uppercase;
    }

    /* --- RECENT SECTIONS --- */
    .section-title {
        color: #34495e;
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 15px;
    }

    /* Table Styling */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .custom-table thead {
        background-color: #2c3e50;
        color: white;
    }

    .custom-table th {
        font-weight: 500;
        font-size: 0.85rem;
        border: none;
        padding: 12px 15px;
    }

    .custom-table td {
        padding: 12px 15px;
        font-size: 0.9rem;
        vertical-align: middle;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Notification List Styling */
    .notification-list {
        list-style: none;
        padding: 0;
    }

    .notification-item {
        background: white;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
        border-left: 4px solid #f39c12;
        transition: background-color 0.2s;
    }

        .notification-item:hover {
            background-color: #fcfcfc;
        }

    .notif-title {
        font-weight: 700;
        color: #2c3e50;
        display: block;
    }

    .notif-msg {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    .notif-time {
        font-size: 0.75rem;
        color: #bdc3c7;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="dashboard-container">
    <div class="container">
        <h2 class="page-title">Admin Dashboard</h2>

        <!-- Stats Row -->
        <div class="row g-4 mb-5">

            <!-- 1. Total Clients -->
            <div class="col-md-3">
                <div class="stat-card border-clients">
                    <i class="bi bi-people-fill stat-icon-watermark text-clients"></i> <!-- Icon moved here -->
                    <div class="stat-content">
                        <h5>Total Clients</h5>
                        <h2 class="text-clients">@Model.TotalClients</h2>
                    </div>
                </div>
            </div>

            <!-- 2. Total Lawyers -->
            <div class="col-md-3">
                <div class="stat-card border-lawyers">
                    <i class="bi bi-briefcase-fill stat-icon-watermark text-lawyers"></i> <!-- Icon moved here -->
                    <div class="stat-content">
                        <h5>Total Lawyers</h5>
                        <h2 class="text-lawyers">@Model.TotalLawyers</h2>
                    </div>
                </div>
            </div>

            <!-- 3. Pending Requests -->
            <div class="col-md-3">
                <div class="stat-card border-pending">
                    <i class="bi bi-exclamation-circle-fill stat-icon-watermark text-pending"></i> <!-- Icon moved here -->
                    <div class="stat-content">
                        <h5>Pending Requests</h5>
                        <h2 class="text-pending">@Model.PendingRequests</h2>
                        <a class="card-link text-pending" asp-controller="Account" asp-action="AdminPendingList">Review Requests &rarr;</a>
                    </div>
                </div>
            </div>

            <!-- 4. Total Revenue (FIXED ICON) -->
            <div class="col-md-3">
                <div class="stat-card border-revenue">
                    <!-- Icon is now absolute background, won't push text -->
                    <i class="bi bi-cash-stack stat-icon-watermark text-revenue"></i>

                    <div class="stat-content">
                        <h5>Total Revenue</h5>
                        <h2 class="text-revenue">৳@Model.TotalRevenue</h2>
                        <a class="card-link text-revenue" asp-controller="Admin" asp-action="Payments">View Financials &rarr;</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <!-- Left: Recent Pending Table -->
            <div class="col-lg-7 mb-4">
                <h4 class="section-title">Recent Registration Requests</h4>
                <div class="table-card">
                    <table class="table custom-table mb-0 table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Requested</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentPending.Any())
                            {
                                @foreach (var p in Model.RecentPending)
                                {
                                    <tr>
                                        <td class="fw-bold">@p.FullName</td>
                                        <td>@p.Email</td>
                                        <td><span class="badge bg-secondary">@p.Role</span></td>
                                        <td class="text-muted">@p.RequestedAt.ToLocalTime().ToString("MMM dd, HH:mm")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">No pending requests found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Right: Recent Notifications -->
            <div class="col-lg-5">
                <h4 class="section-title">Latest Notifications</h4>
                <ul class="notification-list">
                    @if (Model.RecentNotifications.Any())
                    {
                        @foreach (var n in Model.RecentNotifications)
                        {
                            <li class="notification-item">
                                <span class="notif-title">@n.Title</span>
                                <span class="notif-msg">@n.Message</span>
                                <span class="notif-time">@n.CreatedAt.ToLocalTime().ToString("f")</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="text-center text-muted py-3">No new notifications.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>