@model LawFirmManagement.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Total Clients</h5>
            <h2>@Model.TotalClients</h2>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Total Lawyers</h5>
            <h2>@Model.TotalLawyers</h2>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Pending Requests</h5>
            <h2>@Model.PendingRequests</h2>
            <a class="btn btn-link" asp-controller="Account" asp-action="AdminPendingList">View all</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Notifications</h5>
            <h2>@Model.UnreadNotifications</h2>
            <a class="btn btn-link" asp-action="Notifications">View all</a>
        </div>
    </div>
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-6">
        <h4>Recent Pending</h4>
        <table class="table">
            <thead><tr><th>Name</th><th>Email</th><th>Role</th><th>Requested</th></tr></thead>
            <tbody>
                @foreach (var p in Model.RecentPending)
                {
                    <tr>
                        <td>@p.FullName</td>
                        <td>@p.Email</td>
                        <td>@p.Role</td>
                        <td>@p.RequestedAt.ToLocalTime()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h4>Recent Notifications</h4>
        <ul class="list-group">
            @foreach (var n in Model.RecentNotifications)
            {
                <li class="list-group-item">
                    <div><strong>@n.Title</strong></div>
                    <div>@n.Message</div>
                    <small class="text-muted">@n.CreatedAt.ToLocalTime()</small>
                </li>
            }
        </ul>
    </div>
</div>
