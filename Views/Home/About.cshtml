@{
    ViewData["Title"] = "About Us";
}

<style>
    /* Hero Banner */
    .about-header {
        background: linear-gradient(rgba(44, 62, 80, 0.9), rgba(44, 62, 80, 0.8)), url('/images/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 80px 20px;
        text-align: center;
        border-radius: 12px;
        margin-bottom: 50px;
    }

    .about-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 15px;
    }

    .about-subtitle {
        font-size: 1.2rem;
        color: #bdc3c7;
        max-width: 700px;
        margin: 0 auto;
    }

    .section-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 20px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            display: block;
            width: 60px;
            height: 4px;
            background-color: #c0392b;
            margin-top: 10px;
            border-radius: 2px;
        }

    .text-content {
        color: #555;
        font-size: 1.05rem;
        line-height: 1.8;
    }

    .value-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        height: 100%;
        text-align: center;
        transition: transform 0.3s ease;
        border-bottom: 4px solid transparent;
    }

        .value-card:hover {
            transform: translateY(-5px);
            border-bottom-color: #2c3e50;
        }

    .value-icon {
        font-size: 2.5rem;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .value-title {
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 10px;
        color: #2c3e50;
    }

    .stats-section {
        background-color: #2c3e50;
        color: white;
        padding: 50px 0;
        margin-top: 50px;
        border-radius: 12px;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2ecc71;
    }

    .stat-label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .contact-card {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        height: 100%;
    }
</style>

<div class="container">

    <!-- Hero -->
    <div class="about-header">
        <h1 class="about-title">About Our Firm</h1>
        <p class="about-subtitle">
            Dedicated to justice, integrity, and excellence through modern legal management.
        </p>
    </div>

    <!-- Who We Are -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h2 class="section-title">Who We Are</h2>
            <p class="text-content">
                <strong>Law Firm Management System</strong> is a technology-driven legal platform
                designed to streamline case handling, financial tracking, and client communication.
            </p>
            <p class="text-content">
                Our firm combines experienced legal professionals with secure digital tools to
                ensure transparency, efficiency, and timely justice for every client.
            </p>
        </div>

        <!-- REPLACED SECTION (NO IMAGE) -->
        <div class="col-lg-6">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <h4 class="fw-bold text-dark mb-3">Our Office Environment</h4>
                <p class="text-muted">
                    Our law firm operates in a professional and secure environment
                    equipped with modern legal infrastructure and digital case
                    management systems.
                </p>
                <ul class="text-muted">
                    <li>✔ Secure document handling</li>
                    <li>✔ Client confidentiality</li>
                    <li>✔ Modern courtroom preparation</li>
                    <li>✔ Technology-assisted legal research</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Core Values -->
    <div class="row g-4 mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="section-title">Our Core Values</h2>
        </div>

        <div class="col-md-4">
            <div class="value-card">
                <i class="bi bi-shield-check value-icon"></i>
                <h4 class="value-title">Integrity</h4>
                <p class="text-muted">Strict ethical standards and transparent legal practice.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="value-card">
                <i class="bi bi-people-fill value-icon"></i>
                <h4 class="value-title">Client Focus</h4>
                <p class="text-muted">Every case is handled with personalized legal care.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="value-card">
                <i class="bi bi-award-fill value-icon"></i>
                <h4 class="value-title">Excellence</h4>
                <p class="text-muted">Technology-backed legal excellence and efficiency.</p>
            </div>
        </div>
    </div>

    <!-- Contact & Location -->
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="contact-card">
                <h3 class="section-title">📍 Office Location</h3>
                <p class="text-content">
                    Uttara Sector 10, Road 12<br />
                    Dhaka – 1230, Bangladesh
                </p>

                <iframe src="https://www.google.com/maps?q=Uttara%20Dhaka&output=embed"
                        width="100%"
                        height="250"
                        style="border:0;"
                        loading="lazy">
                </iframe>
            </div>
        </div>

        <div class="col-md-6">
            <div class="contact-card">
                <h3 class="section-title">📞 Contact Us</h3>
                <p class="text-content">
                    <strong>Email:</strong>
                    <a href="mailto:info@lawfirm.com">info@lawfirm.com</a><br /><br />

                    <strong>Phone:</strong>
                    <a href="tel:+8801712345678">+880 1712-345678</a><br /><br />

                    <strong>Office Hours:</strong><br />
                    Sunday – Thursday<br />
                    9:00 AM – 6:00 PM
                </p>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="stats-section">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-number">25+</div>
                <div class="stat-label">Years Experience</div>
            </div>
            <div class="col-md-3">
                <div class="stat-number">1500+</div>
                <div class="stat-label">Cases Managed</div>
            </div>
            <div class="col-md-3">
                <div class="stat-number">50+</div>
                <div class="stat-label">Registered Lawyers</div>
            </div>
            <div class="col-md-3">
                <div class="stat-number">98%</div>
                <div class="stat-label">Client Satisfaction</div>
            </div>
        </div>
    </div>

</div>
