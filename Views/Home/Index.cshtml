@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Hero Section */
    .hero-section {
        background-color: #2c3e50; /* Navy Blue */
        color: white;
        padding: 80px 20px;
        border-radius: 10px;
        margin-bottom: 40px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: #bdc3c7; /* Light Gray */
        max-width: 600px;
        margin: 0 auto 30px auto;
    }

    /* Buttons */
    .btn-hero-primary {
        background-color: #c0392b; /* Professional Red Accent */
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s;
        border: 2px solid #c0392b;
    }

        .btn-hero-primary:hover {
            background-color: #a93226;
            border-color: #a93226;
            color: white;
            transform: translateY(-2px);
        }

    .btn-hero-secondary {
        background-color: transparent;
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 5px;
        text-decoration: none;
        border: 2px solid white;
        margin-left: 15px;
        transition: all 0.3s;
    }

        .btn-hero-secondary:hover {
            background-color: white;
            color: #2c3e50;
        }

    /* Features Section */
    .feature-card {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        text-align: center;
        height: 100%;
        border-bottom: 4px solid transparent;
        transition: transform 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            border-bottom-color: #2c3e50;
        }

    .icon-circle {
        width: 60px;
        height: 60px;
        background-color: #f4f6f7;
        color: #2c3e50;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 20px auto;
    }

    .feature-title {
        font-weight: 700;
        color: #34495e;
        margin-bottom: 10px;
    }

    .feature-text {
        color: #7f8c8d;
        font-size: 0.95rem;
    }
</style>

<div class="container">
    <div class="hero-section">
        <h1 class="hero-title">Law Firm Management</h1>
        <p class="hero-subtitle">
            A comprehensive solution for managing clients, cases, and legal schedules efficiently and securely.
        </p>

       
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h4 class="feature-title">Client Management</h4>
                <p class="feature-text">
                    Streamlined registration and record-keeping for all client interactions and history.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-briefcase-fill"></i>
                </div>
                <h4 class="feature-title">Case Tracking</h4>
                <p class="feature-text">
                    Monitor case status, assign lawyers, and track progress from initiation to closing.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-calendar-check-fill"></i>
                </div>
                <h4 class="feature-title">Schedule Hearings</h4>
                <p class="feature-text">
                    Never miss a court date with integrated hearing schedules and notifications.
                </p>
            </div>
        </div>
    </div>
</div>