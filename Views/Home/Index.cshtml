@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom CSS -->
<style>
    /* --- HERO SECTION --- */
    .hero-section {
        /* This combines a dark blue overlay with your image */
        background: linear-gradient(rgba(44, 62, 80, 0.85), rgba(44, 62, 80, 0.7)), url('/images/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: white;
        padding: 100px 20px;
        border-radius: 12px;
        margin-bottom: 50px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 15px;
        letter-spacing: -1px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: #ecf0f1; /* Very light gray */
        max-width: 700px;
        margin: 0 auto 35px auto;
        line-height: 1.6;
        font-weight: 400;
    }

    /* --- BUTTONS --- */
    .btn-hero-primary {
        background-color: #c0392b; /* Professional Red */
        color: white;
        padding: 14px 35px;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 50px; /* Rounded pill shape */
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid #c0392b;
        box-shadow: 0 4px 15px rgba(192, 57, 43, 0.4);
        display: inline-block;
    }

        .btn-hero-primary:hover {
            background-color: #a93226;
            border-color: #a93226;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(192, 57, 43, 0.6);
        }

    .btn-hero-secondary {
        background-color: transparent;
        color: white;
        padding: 14px 35px;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 50px;
        text-decoration: none;
        border: 2px solid rgba(255,255,255,0.8);
        margin-left: 15px;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .btn-hero-secondary:hover {
            background-color: white;
            color: #2c3e50;
            border-color: white;
            transform: translateY(-3px);
        }

    /* --- FEATURES SECTION --- */
    .feature-card {
        background: white;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        text-align: center;
        height: 100%;
        border-bottom: 5px solid transparent;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            border-bottom-color: #2c3e50; /* Navy Blue Accent on Hover */
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        background-color: #f4f6f7;
        color: #2c3e50;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin: 0 auto 25px auto;
        transition: background-color 0.3s, color 0.3s;
    }

    .feature-card:hover .icon-circle {
        background-color: #2c3e50;
        color: white;
    }

    .feature-title {
        font-weight: 700;
        color: #34495e;
        margin-bottom: 15px;
        font-size: 1.4rem;
    }

    .feature-text {
        color: #7f8c8d;
        font-size: 1rem;
        line-height: 1.6;
    }
</style>

<div class="container">

    <!-- Hero Banner -->
    <div class="hero-section">
        <h1 class="hero-title">Law Firm Management</h1>
        <p class="hero-subtitle">
            A comprehensive, secure solution for managing clients, cases, and legal schedules efficiently. Excellence in every case.
        </p>

       
    </div>

    <!-- Feature Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h4 class="feature-title">Client Management</h4>
                <p class="feature-text">
                    Streamlined registration and record-keeping for all client interactions and history in one secure place.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-briefcase-fill"></i>
                </div>
                <h4 class="feature-title">Case Tracking</h4>
                <p class="feature-text">
                    Monitor case status in real-time, assign dedicated lawyers, and track progress from initiation to closing.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-circle">
                    <i class="bi bi-calendar-check-fill"></i>
                </div>
                <h4 class="feature-title">Schedule Hearings</h4>
                <p class="feature-text">
                    Never miss a court date. Integrated hearing schedules, reminders, and automated notifications.
                </p>
            </div>
        </div>
    </div>
</div>