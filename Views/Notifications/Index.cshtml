@model List<LawFirmManagement.Models.NotificationItem>

@{
    ViewData["Title"] = "My Notifications";
}

<!-- Custom CSS -->
<style>
    .notif-container {
        background-color: #f8f9fa;
        min-height: 80vh;
        padding-top: 30px;
    }

    .notif-card {
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border-radius: 10px;
        overflow: hidden;
    }

    .notif-item {
        padding: 20px;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.2s;
        background: white;
    }

        .notif-item:hover {
            background-color: #f9f9f9;
        }

    /* Unread items have a highlighted border */
    .unread {
        border-left: 4px solid #f39c12; /* Orange accent */
        background-color: #fffaf0;
    }

    .notif-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 1.05rem;
        display: block;
        margin-bottom: 5px;
    }

    .notif-msg {
        color: #555;
        font-size: 0.95rem;
        margin-bottom: 8px;
    }

    .notif-date {
        font-size: 0.8rem;
        color: #95a5a6;
    }

    .btn-read {
        border: 1px solid #3498db;
        color: #3498db;
        background: transparent;
        border-radius: 20px;
        padding: 5px 15px;
        font-size: 0.75rem;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-read:hover {
            background: #3498db;
            color: white;
        }
</style>

<div class="notif-container">
    <div class="container">
        <h2 class="mb-4" style="color:#2c3e50; font-weight:700;">My Notifications</h2>

        <div class="card notif-card">
            @if (Model.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <div class="notif-item @(item.IsRead ? "" : "unread")">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <span class="notif-title">
                                        @if (!item.IsRead)
                                        {
                                            <i class="bi bi-circle-fill text-warning me-2" style="font-size:8px; vertical-align:middle;"></i>
                                        }
                                        @item.Title
                                    </span>
                                    <div class="notif-msg">@Html.Raw(item.Message)</div>
                                    <span class="notif-date">
                                        <i class="bi bi-clock"></i> @item.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy • h:mm tt")
                                    </span>
                                </div>

                                @if (!item.IsRead)
                                {
                                    <form asp-action="MarkRead" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn-read">Mark as Read</button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3 text-muted">You have no notifications.</p>
                </div>
            }
        </div>
    </div>
</div>