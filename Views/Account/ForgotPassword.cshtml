@model LawFirmManagement.Controllers.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow-sm">
        <div class="card-body p-5 text-center">
            <h3 class="mb-3 text-secondary">Forgot Password?</h3>
            <p class="text-muted mb-4">Enter your email to receive a reset link.</p>

            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button class="btn btn-warning w-100 fw-bold text-dark">Send Reset Link</button>
            </form>
            <div class="mt-3">
                <a asp-action="Login" class="text-decoration-none">Back to Login</a>
            </div>
        </div>
    </div>
</div>