@model LawFirmManagement.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Page Background */
    .login-wrapper {
        background: linear-gradient(rgba(44, 62, 80, 0.8), rgba(44, 62, 80, 0.8)), url('/images/legal-bg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    /* The white box containing the form */
    .login-card {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 10px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        width: 100%;
        max-width: 420px;
        border-top: 5px solid #2c3e50;
        position: relative;
    }

        /* Headings */
        .login-card h2 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    /* Input fields */
    .form-control {
        border-radius: 5px;
        height: 48px;
        border: 1px solid #ced4da;
        font-size: 0.95rem;
    }

        .form-control:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.15);
        }

    /* The Login Button */
    .btn-login {
        background-color: #2c3e50;
        border-color: #2c3e50;
        color: white;
        height: 48px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-login:hover {
            background-color: #1a252f;
            border-color: #1a252f;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    /* Links */
    .register-link a, .forgot-link {
        color: #2c3e50;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }

        .register-link a:hover, .forgot-link:hover {
            text-decoration: underline;
            color: #3498db;
        }
</style>

<div class="login-wrapper">
    <div class="login-card">

        <h2 class="text-center">Member Login</h2>
        <p class="text-center text-muted mb-4">Welcome back to the Firm</p>

        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success text-center small py-2">
                @TempData["msg"]
            </div>
        }

        <form asp-action="Login" method="post">

            <div class="mb-3">
                <label class="form-label fw-bold small text-muted">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <div class="d-flex justify-content-between">
                    <label class="form-label fw-bold small text-muted">Password</label>

                    <!-- THE FORGOT PASSWORD LINK IS HERE -->
                    <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link small">Forgot Password?</a>
                </div>

                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="Enter Your Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Sign In</button>
        </form>

        <div class="mt-4 text-center register-link">
            <span class="text-muted small">New Client?</span>
            <a asp-action="RegisterPending">Create an account here</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}