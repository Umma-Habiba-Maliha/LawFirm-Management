@model LawFirmManagement.Models.Case
@{
    ViewData["Title"] = "Pay Legal Fees";
    // Check for nulls to prevent crashes
    decimal amount = 0;
    if (ViewBag.PayableAmount != null)
    {
        amount = Convert.ToDecimal(ViewBag.PayableAmount);
    }
    string stage = ViewBag.PaymentStage as string ?? "Payment";
}

<style>
    .payment-wrapper {
        background: #f8f9fa;
        min-height: 80vh;
        padding: 60px 0;
    }

    .payment-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 500px;
        margin: 0 auto;
        overflow: hidden;
    }

    .pay-header {
        background: #2c3e50;
        color: white;
        padding: 30px;
        text-align: center;
    }

    .amount-display {
        font-size: 3rem;
        font-weight: 800;
        color: #2ecc71;
        margin: 10px 0;
    }

    .ssl-logo {
        width: 100%;
        max-width: 300px;
        margin-bottom: 20px;
    }

    .btn-pay {
        background-color: #27ae60;
        color: white;
        font-weight: 700;
        width: 100%;
        padding: 15px;
        border-radius: 6px;
        border: none;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .btn-pay:hover {
            background-color: #219150;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.4);
        }
</style>

<div class="payment-wrapper">
    <div class="payment-card">
        <div class="pay-header">
            <h5 class="opacity-75 text-uppercase ls-1">@stage Payment</h5>
            <div class="amount-display">৳@amount.ToString("N0")</div>
            <p class="mb-0 text-white-50">@Model.CaseTitle</p>
        </div>

        <div class="p-5 text-center">
            <!-- SSLCommerz Branding -->
            <img src="https://securepay.sslcommerz.com/public/image/sslcommerz.png" class="ssl-logo" alt="SSLCommerz" />

            <p class="text-muted mb-4">
                You will be redirected to the secure SSLCommerz gateway. You can pay using
                <strong>bKash, Nagad, Rocket, Visa, or MasterCard</strong>.
            </p>

            <form asp-action="ProcessPayment" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="paymentStage" value="@stage" />

                <button class="btn btn-pay">
                    <i class="bi bi-shield-lock-fill me-2"></i> Pay Securely
                </button>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="text-muted small text-decoration-none">Cancel Payment</a>
            </div>
        </div>
    </div>
</div>